.hover-color-primary:hover
    color $primary
.hover-color-negative:hover
    color $negative
.hover-color-positive:hover
    color $positive
.hover-color-warning:hover
    color $warning
.hover-color-grey:hover
    color $grey
.hover-color-light-grey:hover
    color $light-grey

.hover-bg-primary:hover
    background-color $primary
.hover-bg-negative:hover
    background-color $negative
.hover-bg-positive:hover
    background-color $positive
.hover-bg-warning:hover
    background-color $warning
.hover-bg-grey:hover
    background-color $grey
.hover-bg-light-grey:hover
    background-color $light-grey

.sw-form
    &.underline
        background #fff
        &:before
            border-width  0 0 1px 0
    &.border
        border-radius $border-radius
        background #fff
        &:before
            border-width 1px
    &.fill
        border-radius $border-radius
        background-color $light-grey
    &.error
        &:before
            border-color $negative
    &.focus
        &:before
            border-color $primary
    &:before
        content ''
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        border-radius inherit
        border-width 0
        border-style solid
        border-color $grey
        transition .6s $common-transition

.sw-mask
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    border-radius inherit
    opacity .1

.common-shadow
    box-shadow 0 1px 5px rgba(0,0,0,.2), 0 2px 2px rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.12)

.deep-shadow
    box-shadow 0 3px 5px -1px rgba(0,0,0,.2), 0 5px 8px rgba(0,0,0,.14), 0 1px 14px rgba(0,0,0,.12)