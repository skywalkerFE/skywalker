.sw-form
    &.underline
        background #fff
        &:before
            border-width  0 0 1px 0
    &.border
        border-radius $border-radius
        background #fff
        &:before
            border-width 1px
    &.fill
        border-radius $border-radius
        background-color $light-grey
    &.error
        &:before
            border-color $negative
    &.focus
        &:before
            border-color $primary
    &:before
        content ''
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        border-radius inherit
        border-width 0
        border-style solid
        border-color $grey
        transition .6s $common-transition

.common-shadow 
    box-shadow $common-shadow

.deep-shadow 
    box-shadow $deep-shadow

.inset-shadow
    box-shadow inset $inset-shadow

