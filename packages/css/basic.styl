$primary = #0070d2
$negative = #bf0201
$positive = #4bca81
$warning = #ffb75d
$grey = #c9c7c5
$light-grey = #f2f2f2
$shadow-grey = rgba(0,0,0,.05)

$common-size = 14px
$border-radius = 4px
$min-gutter = 3px
$medium-gutter = 2 * $min-gutter
$common-gutter = 2 * $medium-gutter
$large-gutter = 2 * $common-gutter

$common-shadow = 0 1px 5px rgba(0,0,0,.2), 0 2px 2px rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.12)
$deep-shadow = 0 3px 5px -1px rgba(0,0,0,.2), 0 5px 8px rgba(0,0,0,.14), 0 1px 14px rgba(0,0,0,.12)
$common-transition = cubic-bezier(.25,.8,.5,1)

div
    position relative

.hide
    display none !important

.invisible
    visibility hidden

.padding
    &-min
        padding $min-gutter
    &-medium
        padding $medium-gutter
    &-common
        padding $common-gutter
    &-large
        padding $large-gutter

.margin
    &-min
        margin $min-gutter
    &-medium
        margin $medium-gutter
    &-common
        margin $common-gutter
    &-large
        margin $large-gutter

body
    font-family Roboto,-apple-system,Helvetica Neue,Helvetica,Arial,sans-serif
    -ms-text-size-adjust 100%
    -webkit-text-size-adjust 100%
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    font-smoothing antialiased
    font-size $common-size

.color-primary
    color $primary
.color-negative
    color $negative
.color-positive
    color $positive
.color-warning
    color $warning
.color-grey
    color $grey
.color-light-grey
    color $light-grey

.bg-primary
    background-color $primary
.bg-negative
    background-color $negative
.bg-positive
    background-color $positive
.bg-warning
    background-color $warning
.bg-grey
    background-color $grey
.bg-light-grey
    background-color $light-grey



.border-primary
    &:before
        content ''
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        border-radius inherit
        border-width 1px
        border-style solid
        border-color $primary
        transition .6s $common-transition
.border-negative
    &:before
        content ''
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        border-radius inherit
        border-width 1px
        border-style solid
        border-color $negative
        transition .6s $common-transition
