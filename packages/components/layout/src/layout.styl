.sw-layout
    position relative
    height 100%
    width 100%
    &.horizontal
        transition width .3s $common-transition
    &.vertival
        transition height .3s $common-transition
    overflow hidden
    .sw-layout__main
        position relative
        flex 1 1 auto
        overflow hidden
    .sw-layout__around
        flex-shrink 0
        > .min-width
            height 100%
        > .min-height
            width 100%


    