.sw-layout
    position relative
    height 100%
    width 100%
    &.horizontal
        transition width .3s $common-transition
    &.vertival
        transition height .3s $common-transition
        overflow hidden
    &.shadow
        .sw-layout__around
            box-shadow 0 1px 8px rgba(0,0,0,.2), 0 3px 4px rgba(0,0,0,.14), 0 3px 3px -2px rgba(0,0,0,.12)
            z-index 1
    .sw-layout__main
        position relative
        flex 1 1 auto
        overflow hidden
    .sw-layout__around
        flex-shrink 0
        > .min-width
            height 100%
        > .fit-width
            height 100%
        > .min-height
            width 100%
        > .fit-height
            width 100%