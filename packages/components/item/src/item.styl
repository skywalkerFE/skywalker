.sw-item
    position relative
    flex auto
    border-radius inherit
    &.disable
        pointer-events none !important
        color $grey !important
    &.router-link-exact-active .sw-mask
        visibility visible !important
    .sw-item__content
        position relative
        flex auto
        .sw-item__inner
            flex auto
        .sw-item__before, .sw-item__inner, .sw-item__after
            min-height $large-gutter