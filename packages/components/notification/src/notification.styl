.sw-notification-fade-enter
  transform translateX(100%)
.sw-notification-fade-leave-active
  transform translateX(100%)
  opacity 0
.sw-notification
  position fixed
  width 330px
  padding 14px 26px 14px 13px
  box-sizing border-box
  border-radius 8px
  background #fff
  box-shadow: 0 2px 12px 0 rgba(0,0,0,.1)
  border 1px solid #ebeef5
  transition opacity .5s, transform .5s, left .5s, right .5s, top 0.5s, bottom .5s
  overflow hidden
  right 16px
  z-index: 999
  .title
    font-weight 700
    font-size 16px
    color #303133
    margin 0
    border none
  .content
    font-size 14px
    line-height 21px
    margin 6px 0 0
    color #606266
    text-align justify
    padding 0
  .close
    position absolute  
    top 15px
    right 15px
    cursor pointer
    color #909399
    .material-icons
      font-size 16px