.sw-select__options
    position absolute
    bottom 0
    left 0
    min-width 100%
    background #fff
    transform translate(0, calc(100% + 4px))
    z-index 99
    .sw-item
        &:hover
            background $light-grey
            cursor pointer
        &.selected
            color $primary
    .sw-select__option
        box-sizing content-box
        padding $medium-gutter
        height $large-gutter
        line-height $large-gutter
        font-size $common-size
        outline none
        width 100%
        min-width 100px
        background transparent
        cursor pointer
        &.no-options
            color $grey
            cursor default