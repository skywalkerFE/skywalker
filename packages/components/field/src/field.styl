.sw-field
    padding $common-gutter
    .sw-field__label
        .sw-label
            white-space nowrap
    &.disable
        .sw-field__label
            color $grey
            .sw-label
                white-space nowrap
        .sw-field__content
            background $light-grey
    .sw-field__label
        position relative
        margin-right $large-gutter
    .sw-required
        padding-left $min-gutter
        color $negative
    .sw-field__content
        position relative
        flex auto
        .sw-field__disabled
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            z-index 9
            background transparent
        .sw-field__before, .sw-field__after
            color $grey
    .sw-field__error
        position absolute
        right 0
        padding $min-gutter $common-gutter
        transform translate(calc(100% + 18px))
        border-radius $border-radius
        box-shadow 0px 1px 1px rgba(0,0,0,0.2), 0px 0px 4px rgba(0,0,0,0.2)
        min-height "calc(100% - %s)" % $medium-gutter
        background #fff
        color $negative
        z-index 9
        &:before
            position absolute
            top calc(50% - 4.5px)
            left -4px
            width 9px
            height 9px
            background: #fff
            box-shadow: -1px 1px 1px 0px rgba(0,0,0,0.2)
            content: ""
            transform rotate(45deg)
    &:not(.disable)
        .sw-form
            &:hover:not(.error)
                border-color $primary !important
                cursor pointer