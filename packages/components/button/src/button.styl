.sw-button
    position relative
    height fit-content
    font-size inherit
    font-weight inherit
    border none
    padding 0
    outline none
    .sw-item
        z-index 1
    &.underline
        &:before
            border-width 0 0 1px 0
    &.border
        border-radius $border-radius
        background #fff
        &:before
            border-width 1px
    &.fill
        color #fff
        border-radius $border-radius
        // background-color $primary
        &.primary
            background-color $primary
        &.negative
            background-color $negative
        &.positive
            background-color $positive
        &.warning
            background-color $warning
        &.grey
            background-color $grey
    &:not(.fill)
        &.primary
            color $primary
        &.negative
            color $negative
        &.positive
            color $positive
        &.warning
            color $warning
        &.grey
            color $grey
    .sw-item
        &:not(.round-slot)
            padding 0 $common-gutter - $min-gutter
        // &.round-slot
        //     padding $min-gutter
        &.mini
            padding 0
    .sw-button__inner
        justify-content inherit
    .sw-button__before, .sw-button__inner, .sw-button__after
        min-height $large-gutter
    &.round
        border-radius 999px
    &:before
        content ''
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        border-radius inherit
        border-width 0
        border-style solid
        border-color currentColor
        transition .3s $common-transition
    &.common-shadow:active
        &:before
            box-shadow $deep-shadow