.sw-slide__container
    position relative
    transition all .3s $common-transition
    &.shadow
        box-shadow inset 1px 1px 9px -7px rgba(0,0,0,.7)
    .sw-slide__content
        position relative
        &.min-width
            width min-content
        &.fit-width
            width fit-content
        &.min-height
            height min-content
        &.fit-height
            height fit-content


    